version: '3.8'

services:
  {{PROJECT_NAME}}-server:
    build:
      context: .
      dockerfile: {{SERVER_NAME}}/Dockerfile
    ports:
      - "5104:80"
      - "5105:443"
    environment:
      - ASPNETCORE_ENVIRONMENT=Production
      - ASPNETCORE_URLS=http://+:80
    volumes:
      - ./{{SERVER_NAME}}/appsettings.json:/app/appsettings.json:ro
      - ./{{SERVER_NAME}}/appsettings.Development.json:/app/appsettings.Development.json:ro
    networks:
      - {{PROJECT_NAME}}-network
    restart: unless-stopped

  {{PROJECT_NAME}}-client:
    build:
      context: ./{{CLIENT_DIR}}
      dockerfile: Dockerfile
    ports:
      - "5173:80"
    networks:
      - {{PROJECT_NAME}}-network
    restart: unless-stopped
    profiles:
      - development

  nginx:
    image: nginx:alpine
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - {{PROJECT_NAME}}-server
    networks:
      - {{PROJECT_NAME}}-network
    restart: unless-stopped
    profiles:
      - production

networks:
  {{PROJECT_NAME}}-network:
    driver: bridge

